{% extends 'layout.html.twig' %}

{% block title %}Bike Shop - Shopping Basket{% endblock %}

{% block header %}Your Shopping Basket{% endblock %}

{% block content %}
    <section class="bg-gray-100 p-8">
        <div class="container mx-auto">

            <h2 class="text-3xl font-semibold mb-4">Shopping Basket</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for item in basketItems %}
                    <div class="bg-white p-6 rounded-md shadow-md">
                        <img src="/images/{{ item.image }}" alt="{{ item.name }}" class="mb-4 rounded-md">
                        <h3 class="text-xl font-semibold mb-2">{{ item.name }}</h3>
                        <p class="text-gray-600">{{ item.description }}.</p>
                        <p class="text-orange-500 font-semibold mt-2">${{ item.price }}</p>
                        <form method="post">
                        <input type="hidden" name="id" value="{{item.id}}">
                            <button class="mt-4 bg-red-500 text-white py-2 px-4 rounded-md" type="submit">Remove from Basket</button>
                        </form>
                    </div>
                {% endfor %}
            </div>

            {% if basketItems|length == 0 %}
                <p class="text-center text-gray-600 mt-8">Your basket is empty.</p>
            {% endif %}

        </div>
    </section>
        <section class=" py-16">
        <div class="container mx-auto text-center">
            <h2>Total</h2>
            <p>$ {{total | number_format(2)}}</p>
        </div>
    </section>

    <section class="bg-blue-500 text-white py-16">
        <div class="container mx-auto text-center">
            <h2 class="text-4xl font-semibold mb-4">Continue Shopping</h2>
            <p class="text-lg mb-8">Explore our wide range of bikes suitable for all types of riders.</p>
            <form action="checkout" class="basket-checkout">
            <button class="bg-white text-blue-500 py-2 px-4 rounded-md">Checkout</button>
            </form>
        </div>
    </section>
{% endblock %}
